.autoscroll
  - if @keys.empty?
    p.nodata
      = l(:label_no_data)
  - else
    table#gpgkeys.list
      thead
        tr
          th = l(:label_key_uid)
          th = l(:label_key_details)
          th
      tbody
        = render partial: 'data_line', collection: @keys[@offset, @limit], as: :key

span.pagination
  = pagination_links_full @key_pages, @key_count
